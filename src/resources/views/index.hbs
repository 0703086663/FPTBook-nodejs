<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div
      class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center"
    >
      {{#each books}}
        <div class="col mb-5">
          <div class="card h-100">
            {{#if this.available}}{{else}}<div
                class="badge bg-danger text-white position-absolute"
                style="top: 0.5rem; right: 0.5rem"
              >Unavailable</div>{{/if}}
            <img
              class="card-img-top"
              src="{{this.image}}"
              alt="{{this.title}}"
            />

            <div class="card-body p-4">
              <div class="text-center">
                <h5 class="fw-bolder">{{this.title}}</h5>
                <h6 class="text-muted">{{this.author.name}}</h6>
                <div
                  class="d-flex justify-content-center small text-warning mb-2"
                >
                  {{#loopRandom}}
                    <div class="bi-star-fill"></div>
                  {{/loopRandom}}
                </div>
                {{formatCurrency this.price}}
              </div>
            </div>
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center">
                <a class="btn btn-outline-dark mt-auto mx-1 {{#if this.available}}{{else}}disabled{{/if}}" href="/add-to-cart/{{this._id}}">
                  <i class="bi-cart-fill"></i>
                </a>
                <a class="btn btn-outline-dark mt-auto mx-1" href="/book/{{this._id}}">
                  <i class="bi bi-info-circle"></i>
                </a>
                <a class="btn btn-outline-dark mt-auto mx-1 {{#if this.available}}{{else}}disabled{{/if}}" href="#">
                  <i class="bi bi-journal-plus"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>