
<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <img
        src="{{user.avatar}}"
        alt="{{user.name}}'s Avatar"
        class="img-fluid rounded-circle"
      />
    </div>
    <div class="col-md-9">
    {{#if messages.error}}
        <div class="alert alert-danger" role="alert">
            {{messages.error}}
        </div>
        {{/if}}
        {{#if messages.success}}
        <div class="alert alert-success" role="alert">
            {{messages.success}}
        </div>
    {{/if}}
      <form method="POST" action="/user/profile/update/{{user._id}}">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="{{user.name}}"
          />
        </div>
        <div class="form-group mt-2">
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="{{user.email}}"
            disabled
          />
        </div>

        <!-- Editable Address -->
        <div class="form-group mt-2">
          <label for="address">Address</label>
          <input
            type="text"
            class="form-control"
            id="address"
            name="address"
            value="{{user.address}}"
          />
        </div>
        
        <!-- Editable Avatar -->
        <div class="form-group mt-2">
          <label for="avatar">Avatar</label>
          <input
            type="text"
            class="form-control"
            id="avatar"
            name="avatar"
            value="{{user.avatar}}"
          />
        </div>

        <!-- Editable Role -->
        <div class="form-group mt-2">
          <label for="role">Role</label>
          <input
            type="text"
            class="form-control"
            id="role"
            name="role"
            value="{{user.role}}"
            {{#ifeq user.role "Staff"}}{{else}}disabled{{/ifeq}}
          />
        </div>

        <div class="mt-4">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>